<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="@dimen/minimum_debts_cell_height"
    android:background="@color/colorForLevelThreeCell"
    android:paddingRight="@dimen/padding_horizontal_small"
    android:paddingLeft="@dimen/padding_horizontal_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/debt_list_item_TV_interest_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="left"
            android:text="New Text"
            android:textColor="@color/textColor"
            android:textSize="@dimen/list_item_text_size"
            android:paddingRight="@dimen/padding_horizontal_small"/>

        <TextView
            android:id="@+id/debt_list_item_TV_original_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="New Text"
            android:textColor="@color/textColor"
            android:textSize="@dimen/list_item_text_size"
            android:paddingRight="@dimen/padding_horizontal_small"/>

        <TextView
            android:id="@+id/debt_list_item_TV_creditor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"

            android:text="New Text"
            android:textColor="@color/textColor"
            android:textSize="@dimen/list_item_text_size" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/debt_list_item_calculated_debt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">



        <TextView
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/debt_list_item_TV_calculated_sum"
            android:textSize="@dimen/list_item_text_size"
            android:paddingRight="@dimen/padding_horizontal_small"
            android:textColor="@color/textColor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/debt_list_item_TV_payments_left"

            android:gravity="right"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@color/textColor"/>

    </LinearLayout>
</LinearLayout>